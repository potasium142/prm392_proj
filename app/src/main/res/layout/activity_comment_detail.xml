
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Avatar and Username -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/ivAvatarDetail"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clipToOutline="true"
            android:contentDescription="User Avatar"/>

        <!-- Username and Date -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUserNameDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bella Throne"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tvDateDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posted on: 2024-11-07"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Review Content -->
    <TextView
        android:id="@+id/tvReviewTextDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum tempor incididunt ut labore et dolore,inise voluptate velit esse cillum"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="4dp"/>

    <!-- Like & Dislike Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <!-- Like Button -->
        <LinearLayout
            android:id="@+id/btnLikeDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="#E0F7FA"
            android:layout_marginEnd="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_thumb_up_24"
                android:contentDescription="Like"/>

            <TextView
                android:id="@+id/tvLikeCountDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Dislike Button -->
        <LinearLayout
            android:id="@+id/btnDislikeDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="#E0F7FA">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_thumb_down_alt_24"
                android:contentDescription="Dislike"/>

            <TextView
                android:id="@+id/tvDislikeCountDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
