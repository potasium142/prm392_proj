<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TestScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/userProfileJump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Profile" />

        <Button
            android:id="@+id/signInJump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Sign in" />

        <Button
            android:id="@+id/mainScreenJump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="main screen"

            />

        <Button
            android:id="@+id/signUpJump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"

            />

        <Button
            android:id="@+id/searchJump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Search" />

        <Button
            android:id="@+id/user_profile_jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Profile" />

        <Button
            android:id="@+id/all_recipes_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All recipes" />

        <Button
            android:id="@+id/add_recipe_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add recipe" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>